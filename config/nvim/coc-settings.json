{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": ["--stdio"],
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "./node_modules/elm-test/bin/elm-test"
      }
    },
    "elixir": {
      "command": "~/.elixir_ls/release/language_server.sh",
      "args": [],
      "filetypes": ["elixir", "eelixir", "ex", "exs", "eex"],
      "rootPatterns": ["mix.lock"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  "coc.preferences.enableFloatHighlight": false,
  "highlight.colors.enable": false,
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.maxHeight": 15,
  "list.insertMappings": {
    "<C-c>": "do:exit"
  }
}
