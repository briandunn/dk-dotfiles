{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": ["--stdio"],
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "./node_modules/elm-test/bin/elm-test"
      }
    },
    "elixir": {
      "command": "~/.elixir_ls/release/language_server.sh",
      "args": [],
      "filetypes": ["elixir", "eelixir", "ex", "exs", "eex"],
      "rootPatterns": ["mix.lock"]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },
  "coc.preferences.enableFloatHighlight": false,
  "highlight.colors.enable": false,
  "list.nextKeymap": "<C-n>",
  "list.previousKeymap": "<C-p>",
  "list.insertMappings": {
    "<C-c>": "do:exit"
  },
  "Lua.telemetry.enable": false,
  "Lua.diagnostics.globals": ["vim"]
}
